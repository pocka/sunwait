[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{zig,zon}]
# Zig compiler can't handle tab character
indent_style = space
indent_size = 4

[*.nix]
# Nix's string interpolation does not work well with tab character
indent_style = space
indent_size = 2
